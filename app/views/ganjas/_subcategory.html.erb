<% ganjas.each do |ganja| %>
  <div class="product-card">
    <div>
      <%= cl_image_tag("marijuana",
          width: 400, height: 300, crop: :fill) %>
      <p>Name: <%= ganja.name %></p>
      <p>Strain: <%= ganja.strain %></p>
      <p>Price: $<%= ganja.unit_price %></p>
    </div>
    <div>
      <p>Description: <%= ganja.strain %></p>
    </div>
  </div>
<% end %>
